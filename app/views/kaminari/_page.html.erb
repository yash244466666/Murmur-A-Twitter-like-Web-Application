<% if current_page.last? %>
  <span class="px-3 py-2 text-sm font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md"><%= page %></span>
<% else %>
  <%= link_to page, url, class: "px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
<% end %>
