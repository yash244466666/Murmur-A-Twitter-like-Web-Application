<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-center mb-8">Create your account</h2>

      <%= form_with(model: @user, local: true, class: "space-y-6", format: :html, data: { turbo: false }) do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
            <div class="text-red-700">
              <h3 class="text-lg font-medium mb-2">Please fix the following errors:</h3>
              <ul class="list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li class="text-sm"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :username, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @user.errors[:username].any?}" %>
            <% if @user.errors[:username].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @user.errors[:username].join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @user.errors[:email].any?}" %>
            <% if @user.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email].join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @user.errors[:password].any?}" %>
            <% if @user.errors[:password].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password].join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @user.errors[:password_confirmation].any?}" %>
            <% if @user.errors[:password_confirmation].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password_confirmation].join(', ') %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Already have an account?
          <%= link_to "Sign in", login_path, class: "text-blue-500 hover:text-blue-700" %>
        </p>
      </div>
    </div>
  </div>
</div>
